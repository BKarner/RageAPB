{
  "compileOnSave": true,
  "compilerOptions": {
    "jsx": "react",
    "types": [],
    "moduleResolution": "node",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@shared/*": ["./@shared/*"]
    },

    /* Basic Options */
    "target": "es2020",                          /* Specify ECMAScript target version: 'ES3' (default), 'ES5', 'ES2015', 'ES2016', 'ES2017', or 'ESNEXT'. */
    "strict": true,                            /* Enable all strict type-checking options. */
    "allowSyntheticDefaultImports": true
  },
  "references": [
    {"path": "src/client"},
    {"path": "src/server"},
    {"path": "src/__html__"}
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
